@if (ThisBuilding.IsStandard)
{
	<Enclosure Size=@ThisBuilding.Size Scale=@(ThisBuilding.IsSelected ? 2 : 1.5) IsProportional=true></Enclosure>
}
else
{
	<FontAwesome IconName="@ThisBuilding.Icon" Size=@(ThisBuilding.IsSelected ? "x-3" : "x-4")></FontAwesome>
}

@code {
	[Parameter]
	public BuildingModel ThisBuilding { get; set; }
}
